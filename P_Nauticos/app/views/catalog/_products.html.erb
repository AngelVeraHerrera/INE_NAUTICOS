<dl id = 'products'>
  <% for product in @products %>
    <dt>
      <%= link_to product.name, :action => 'show', :id => product %>
 
    </dt>
 
      <dd><%= product.brand.name %></dd>
  <dd><%= sprintf("%0.2f", product.price) %></dd>
    <dd><small>Marca: <%= product.brand.name %></small></dd>
  <% end %>
</dl>
